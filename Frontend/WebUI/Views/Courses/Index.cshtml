@model List<CourseViewModel>
@{
    ViewData["Title"] = "Index";
}


<div class=" row">
    <div class=" col-md-12">
        <div class=" card">
            <div class=" card-body">
                <h5 class=" card-title">Courses</h5>
                <a asp-action="Create" asp-controller="Courses" class="btn btn-primary mb-3">Create Course</a>
                @if (Model.Any())
                {
                    <table class=" table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Picture</th>
                                <th>Course Name</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Category</th>
                                <th>Processes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><img style="width:72px;" src="@item.StockPictureUrl" class="img-thumbnail"  /></td>
                                <td>@item.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Duration</td>
                                <td>@item.Category.Name</td>
                                <td>
                                    <a asp-action="Update" asp-controller="Courses" asp-route-id="@item.Id" class="btn btn-success btn-sm">Update</a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-controller="Courses" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class=" alert alert-info">There is No Any Course</div>
                }

            </div>
        </div>
    </div>
</div>
