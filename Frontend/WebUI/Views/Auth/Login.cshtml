@model WebUI.Models.LoginInput
@{
    ViewData["Title"] = "Login";
}



<div class=" row">
    <div class="col-md-4 offset-md-4">
        <div class=" card">
            <div class=" card-body">
                <h5 class=" card-title">User Login</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email address</label>
                        <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp">
                        <span class=" text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control">
                        <span class=" text-danger" asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="IsRemember" type="checkbox" class="form-check-input">
                        <label asp-for="IsRemember" class="form-check-label"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Log in</button>
                </form>
            </div>
        </div>
    </div>
</div>




