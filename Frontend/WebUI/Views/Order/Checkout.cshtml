
@{
    ViewData["Title"] = "Checkout";
}
@model CheckoutInfoInput

<form method="Post" asp-action="Checkout" asp-controller="Order">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Address Info</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Province"></label>
                        <input asp-for="Province" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="District"></label>
                        <input asp-for="District" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Street"></label>
                        <input asp-for="Street" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="ZipCode"></label>
                        <input asp-for="ZipCode" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Line"></label>
                        <input asp-for="Line" class="form-control"/>
                    </div>
                    <h5 class="card-title">Payment Info</h5>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardName"></label>
                        <input asp-for="CardName" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CardNumber"></label>
                        <input asp-for="CardNumber" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Expration"></label>
                        <input asp-for="Expration" class="form-control"/>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CVV"></label>
                        <input asp-for="CVV" class="form-control"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Payment History</h5>
                    <table class="table table-striped">
                        @foreach(var item in ViewBag.Basket.BasketItems as List<BasketItemViewModel>)
                        {
                            <tr>
                                <td>@item.CourseName</td>
                                <td>@item.Price</td>
                            </tr>
                        }
                        <tr>
                            <td>@(ViewBag.Basket.HasDiscount?"Discounted Total price":"Total price")</td>
                            <td>@ViewBag.Basket.TotalPrice USD</td>
                        </tr>
                    </table>
                    <button type="submit" class="btn btn-success">Complate Payment</button>
                </div>
            </div>
        </div>
    </div>
</form>

